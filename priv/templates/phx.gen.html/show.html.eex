<h2>Show <%= human_singular %></h2>

<ul>
<%= for {k, _} <- schema_attrs do %>
  <li>
    <strong><%= Phoenix.Naming.humanize(Atom.to_string(k)) %>:</strong>
    <%= "<%=" %> @<%= schema_singular %>.<%= k %> <%= "%\>" %>
  </li>
<% end %>
</ul>

<span><%= "<%=" %> link "Edit", to: <%= schema_singular %>_path(@conn, :edit, @<%= schema_singular %>) <%= "%\>" %></span>
<span><%= "<%=" %> link "Back", to: <%= schema_singular %>_path(@conn, :index) <%= "%\>" %></span>
